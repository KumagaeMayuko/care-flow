{% extends 'user/view/base.html.twig' %}

{% block title %}記事削除{% endblock %}
{% block content %}
    <p>この投稿を本当に削除しますか？</p>
    <table>
    <tr>
        <th>タイトル：</th>
        <td>{{info_detail.title}}</td>
    </tr>
    <tr> 
        <th>作成日時：</th>
        <td>{{info_detail.create_at}}</td>
    </tr>
    <tr>
        <th>作成者：</th>
        <td>{{info_detail.name}}</td>
    </tr>
    <tr>
        <th>内容：</th>
        <td>{{info_detail.content}}</td>
    </tr>
    <tr>
        <th>画像：</th>
        {% if info_detail.image is not empty %}
            <td><img src="{{constant('common\\model\\Bootstrap::ENTRY_URL')}}images/{{info_detail.image}}"/></td>
        {% else %}
            <td>なし</td>
        {% endif %}
    </tr>
    </table>
    <form method="post" action="delete.php">
        <input type="hidden" name="csrf_token" value="{{csrf_token}}">
        <input type="hidden" name="id" value="{{info_detail.id}}">
        <input type="hidden" name="image" value="{{info_detail.image}}">
        <button type="submit" name="delete_complete" value="delete_complete">削除</button>
    </form>
    <p>{{message}}</p>
    <a class="none-link" href="{{constant('common\\model\\Bootstrap::TOP_URL')}}">戻る</a>
{% endblock %}
